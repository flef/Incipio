<h1>TestThread list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Permalink</th>
            <th>Iscommentable</th>
            <th>Numcomments</th>
            <th>Lastcommentat</th>
            <th>Id</th>
            <th>Auteur</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('testthread_show', { 'id': entity.id }) }}">{{ entity.permalink }}</a></td>
            <td>{{ entity.isCommentable }}</td>
            <td>{{ entity.numComments }}</td>
            <td>{% if entity.lastCommentAt %}{{ entity.lastCommentAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.id }}</td>
            <td>{{ entity.auteur }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('testthread_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('testthread_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('testthread_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
