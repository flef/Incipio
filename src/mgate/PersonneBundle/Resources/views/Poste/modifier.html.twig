{% extends "mgatePersonneBundle::layout.html.twig" %}

{% block title %}Modifier un poste - {{ parent() }}{% endblock %}

{% block content_bundle %}

    <h2>Modifier un poste</h2>
<form method="post" {{ form_enctype(form) }}>
	
	{{ form_widget(form) }}
	
	<input type="submit" />
</form>


    <form class="bootbox-confirm" data-content="Êtes-vous sûr de vouloir supprimer définitivement ce poste ?" action="{{ path('mgatePersonne_poste_supprimer', { 'id': form.vars.value.id }) }}" method="post">
    {{ form_widget(delete_form) }}
        <button>Supprimer le poste</button>
    </form>    
                                
<p>
    <a href="{{ path('mgatePersonne_poste_homepage') }}" >Retour à la liste des postes</a>
</p>
{% endblock %}

        
